#: import utils kivy.utils
<AlterarFotoPage>:

    FloatLayout:
        Label:
            pos_hint:{"right":0.9, "top":0.99}
            size_hint: 0.8, 0.1
            text:'Selecione uma foto'

        ScrollView:
            pos_hint:{"right": 0.9, "top":0.89}
            size_hint: 0.8, 0.77

            GridLayout:
                #SCROLL VERTICAL
                size_hint_y:None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
                spacing:5,5
                cols:3    
                id: lista_alterar_imagens
                
        
        FloatLayout:
            pos_hint:{"right":1, "top":0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#006D7E')
                Rectangle:
                    pos:self.pos
                    size: self.size
            
            ImageButton:
                pos_hint:{"right":0.25, "top":0.9}
                size_hint: 0.25, 0.8

                source:'icones/voltar.png'
                on_release: app.trocar_tela('ajustespage')


