#: import utils kivy.utils

<HomePage>:
    FloatLayout:

        Label:
            pos_hint:{"right":0.9 , "top":0.99}
            size_hint:0.8, 0.15
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'icones/botao_fino.png'
            markup: True
            bold:True
            text:'Total de Vendas: 0'
            id: label_total_vendas
            
        ScrollView:
            pos_hint:{"right":1, "top":0.84}
            size_hint: 1, 0.72

            GridLayout:
                cols: 1
                id: lista_info_vendas
                spacing: 3,3
                #SCROLL VERTICAL
                size_hint_y:None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True


                #SCROLL HORIZONTAL
                #size_hint_x:None
                #width: self.minimum_width
                #col_default_width: "90dp"
                #col_force_default: True

          
                


        GridLayout:
            rows:1
            cols:3
            pos_hint:{"right":1, "top":0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#006D7E')
                Rectangle:
                    pos: self.pos
                    size: self.size
            ImageButton:
                source:'icones/add.png'
                on_release: app.trocar_tela('adicionarvendaspage')
            ImageButton:
                source:'icones/salesman.png'
                on_release: app.trocar_tela("listarvendedorespage")
            ImageButton:
                source: 'icones/settings.png'
                on_release: app.trocar_tela('ajustespage')